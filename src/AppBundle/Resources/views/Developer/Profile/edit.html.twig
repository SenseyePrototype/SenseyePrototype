{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
    <link href="https://cdn.rawgit.com/SenseyePrototype/senseyeprototype.github.io/master/css/list.css" type="text/css" rel="stylesheet"/>
    <link href="https://cdn.rawgit.com/SenseyePrototype/senseyeprototype.github.io/master/css/profile.css" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <section class="navigation z-depth-2">
        <nav class="container">
            <div class="nav-wrapper">
                <a href="{{ path('developers.page') }}" class="brand-logo left">Senseye</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="javascript:void(0);">{{ app.getUser().getUsername() }}<span class="new badge red" data-badge-caption="Не опубликован"></span></a></li>
                </ul>
            </div>
        </nav>
    </section>
    <section class="content profile">
        <div class="container">
            <div class="row">
                <div class="col s3 left-menu">
                    <div class="block">
                        <a href="javascript:void(0);" class="name">Профиль</a>
                    </div>
                    <div class="block">
                        <a href="javascript:void(0);" class="name">Наваки</a>
                    </div>
                    <div class="block">
                        <a href="javascript:void(0);" class="name">Контакты</a>
                    </div>
                    <div class="block">
                        <a href="javascript:void(0);" class="name">Выйти</a>
                    </div>
                </div>
                <div class="col s9">
                    <div class="input-field col s12">
                        <i class="material-icons prefix zmdi zmdi-account"></i>
                        <input id="title" type="text" class="validate">
                        <label for="title">Должность</label>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix zmdi zmdi-money"></i>
                        <input id="salary" type="number" class="validate">
                        <label for="salary">Зарплата не ниже</label>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix zmdi zmdi-quote"></i>
                        <textarea id="discription" type="text" class="materialize-textarea validate"></textarea>
                        <label for="discription">Описание</label>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix zmdi zmdi-functions"></i>
                        <input id="exp" type="number" class="validate">
                        <label for="exp">Опыт</label>
                    </div>
                    <div class="input-field col s12">
                        <input type="checkbox" id="publish" checked="checked" />
                        <label for="publish">
                            <i class="zmdi zmdi-cloud-upload"></i> Опубликовать
                        </label>
                    </div>
                    <div class="input-field col s12 padding-top">
                        <button class="btn waves-effect waves-light" type="submit" name="action">
                            Сохранить
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
{% endblock %}